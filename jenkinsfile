pipeline {
agent any

stages {
stage('Clone Repo') {
steps {
git 'https://github.com/ramyadevi2/project1.git'
      }
    }
stage('Build Docker Image') {
steps {
sh 'docker build -t demo-image .'
      }
    }
stage('Run Docker Container') {
steps {
sh '''
docker rm -f demo-container1 || true
docker run -dit --name demo-cont-ps -p 8181:80 demo-image
        '''
      }
    }
  }
}
